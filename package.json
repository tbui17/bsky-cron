{
  "name": "bsky-cron",
  "version": "1.0.0",
  "description": "A cron job that posts random numbers to Bluesky",
  "type": "module",
  "scripts": {
    "post": "bun run src/index.ts",
    "dev": "bun run src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "db:seed": "bun run src/db/seed.ts",
    "db:truncate": "bun run -e \"import { prisma } from './src/db/client'; await prisma.post.deleteMany(); console.log('Truncated'); prisma.\$disconnect();\"",
    "test": "bun test",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop"
  },
  "dependencies": {
    "@atproto/api": "^0.13.0",
    "@prisma/client": "^7.4.0",
    "dotenv": "^16.4.5",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "module": "index.ts",
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
