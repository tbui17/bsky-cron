{
  "name": "bsky-cron",
  "version": "1.0.0",
  "description": "A cron job that posts random numbers to Bluesky",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run start",
    "test": "bun run test:setup && bun test && docker-compose -f docker-compose.test.yml down",
    "test:run": "bun test",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d --wait && bunx prisma db push --config=prisma.config.test.ts",
    "db:seed": "bun run scripts/seed.ts",
    "db:truncate": "bun run scripts/truncate.ts"
  },
  "trustedDependencies": [
    "@prisma/client",
    "prisma"
  ],
  "dependencies": {
    "@atproto/api": "^0.13.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.3.1",
    "pg": "^8.18.0",
    "pino": "^10.3.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.0"
  },
  "module": "index.ts",
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
